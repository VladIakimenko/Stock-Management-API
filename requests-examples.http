# Updating records in a warehouse
PATCH {{baseUrl}}/stocks/1/
Content-Type: application/json

{
  "positions": [
          {
            "product": 2,
            "quantity": 100,
            "price": 130.80
          },
          {
            "product": 3,
            "quantity": 243,
            "price": 145
          }
  ]
}
###

# Updating a record with position removal
PATCH {{baseUrl}}/stocks/1/
Content-Type: application/json

{
  "positions": [
            {
              "product": 2,
              "quantity": 100,
              "price": 130.80
            }
  ]
}
###

# Updating a record with a position addition (REMEMBER TO RE-CREATE THE SSD!)
PATCH {{baseUrl}}/stocks/1/
Content-Type: application/json

{
  "positions": [
            {
              "product": 2,
              "quantity": 100,
              "price": 130.80
            },
            {
              "product": 3,
              "quantity": 170,
              "price": 120.80
            },
            {
              "product": 4,
              "quantity": 170,
              "price": 120.80
            }
  ]
}
